<p id="notice"><%= notice %></p>

<h1 class="page-header">Détails boutique</h1>

<div class="jumbotron">
  <div class="row">
    <label class="col-md-4">Chaine de boutiques</label>
    <%= @shop.chain %>
  </div>
  <div class="row">
    <label class="col-md-4">Nom de la boutique</label>
    <%= @shop.name %>
  </div>
  <div class="row">
    <label class="col-md-4">Téléphone</label>
    <%= @shop.phone %>
  </div>
  </br></br>
  <div class="row">
    <label class="col-md-4">Adresse</label>
    <%= @shop.address %>
  </div>
  <div class="row">
    <label class="col-md-4">Code postal</label>
    <%= @shop.zip %>
  </div>
  <div class="row">
    <label class="col-md-4">Ville</label>
    <%= @shop.city %>
  </div>
  <div class="row">
    <label class="col-md-4">Code pays</label>
    <%= @shop.country_code %>
  </div>

  <h2> Coordonnées GPS </h2>
  <div class="row">
    <label class="col-md-4">Latitude</label>
    <%= @shop.latitude %>
  </div>
  <div class="row">
    <label class="col-md-4">Longitude</label>
    <%= @shop.longitude %>
  </div>

  </br></br>

  <div class="col-md-offset-1 col-md-3">
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <%= link_to 'OK', shops_path, class:"btn btn-default btn-md active" %>
      </div>
      <div class="btn-group" role="group">
        <%= link_to 'Modifier', edit_shop_path(@shop), class:"btn btn-primary btn-md active" %>
      </div>
    </div>
  </div>

</div>
